<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="LocalSequentialSuite" parallel="false" thread-count="1">
    <listeners>
        <listener class-name="utilities.Listeners"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="utilities.RetryHandler"/>
    </listeners>

    <parameter name="execution_env" value="local"/>

    <!-- Chrome Tests -->
    <test name="ChromeTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testCases.registerAnAccount"/>
            <class name="testCases.logOutTest"/>
            <class name="testCases.loginTest"/>
            <class name="testCases.searchAndAddtoWishlistaProduct"/>
            <class name="testCases.addToWishlist"/>
            <class name="testCases.removeFromWishlist"/>
        </classes>
    </test> 

    <!-- Firefox Tests -->
    <test name="FirefoxTest">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="testCases.registerAnAccount"/>
            <class name="testCases.logOutTest"/>
            <class name="testCases.loginTest"/>
            <class name="testCases.searchAndAddtoWishlistaProduct"/>
            <class name="testCases.addToWishlist"/>
            <class name="testCases.removeFromWishlist"/>
        </classes>
    </test>

    <!-- Edge Tests -->
    <test name="EdgeTest">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="testCases.registerAnAccount"/>
            <class name="testCases.logOutTest"/>
            <class name="testCases.loginTest"/>
            <class name="testCases.searchAndAddtoWishlistaProduct"/>
            <class name="testCases.addToWishlist"/>
            <class name="testCases.removeFromWishlist"/>
        </classes>
    </test>
</suite>
